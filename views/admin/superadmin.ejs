<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DentalCare Admin - Super Admin Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/admin_routes.css">
    <script src="/js/jquery-3.6.0.min.js"></script>
    <script src="/js/superAdmin.js"></script>
</head>
<body>
    <div class="dashboard-container">
        <header class="main-header">
            <div class="header-content">
                <h1>Super Admin</h1>
                <div class="user-info">
                    <img src="https://via.placeholder.com/40" alt="User Avatar" class="user-avatar">
                    <span class="user-name">Name</span>
                </div>
            </div>
            <button id="sidebar-toggle" class="sidebar-toggle active">
                <i class="fas fa-bars"></i>
            </button>
        </header>
        <aside class="sidebar">
            <div class="sidebar-header">
                <i class="fas fa-tooth"></i>
                <h2>DentalCare</h2>
            </div>
            <nav class="sidebar-nav">
                <a href="/dashboard"><i class="fas fa-home"></i> Dashboard</a>
                <a href="/dashboard/services" class="active"><i class="fas fa-concierge-bell"></i> Services</a>
                <a href="/dashboard/blogs"><i class="fas fa-blog"></i> Blogs</a>
                <a href="/dashboard/doctor"><i class="fas fa-user-md"></i> Doctors</a>
                <a href="/dashboard/appointments"><i class="fas fa-calendar-check"></i> Appointments</a>
                <a href="/dashboard/patients"><i class="fas fa-users"></i> Patients</a>
                <a href="/dashboard/expenses" class=""><i class="fas fa-money-check-dollar"></i>Expenses</a>
                <a href="/dashboard/admin"><i class="fas fa-user-shield"></i> Admin</a>
            </nav>
            <div class="sidebar-footer">
                <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </div>
        </aside>
        <main class="main-content">
            <div class="dashboard-card">
                <h2>Super Admin Dashboard</h2>
                <div class="greeting">
                    <h3>Hello, <%= name %>!</h3>
                    <p>Username: <%= username %></p>
                </div>

                <div class="admin-section">
                    <h3>All Admins</h3>
                    <ul id="adminsList" class="admin-list"></ul>
                </div>

                <div class="admin-section">
                    <h3>Add New Admin</h3>
                    <form id="addAdminForm" class="admin-form">
                        <div class="form-group">
                            <label for="newAdminName">Name:</label>
                            <input type="text" id="newAdminName" required>
                        </div>
                        <div class="form-group">
                            <label for="newAdminUsername">Username:</label>
                            <input type="text" id="newAdminUsername" required>
                        </div>
                        <div class="form-group">
                            <label for="newAdminPassword">Password:</label>
                            <input type="password" id="newAdminPassword" required>
                        </div>
                        <div class="form-group">
                            <label for="isSuperAdmin">Is Super Admin:</label>
                            <select id="isSuperAdmin" required>
                                <option value="false">No</option>
                                <option value="true">Yes</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Admin</button>
                    </form>
                </div>

                <div class="admin-section">
                    <h3>Update Your Credentials</h3>
                    <form id="updateSuperAdminForm" class="admin-form">
                        <div class="form-group">
                            <label for="currentPassword">Current Password:</label>
                            <input type="password" id="currentPassword" required>
                        </div>
                        <div class="form-group">
                            <label for="updateUsername">New Username:</label>
                            <input type="text" id="updateUsername" required>
                        </div>
                        <div class="form-group">
                            <label for="updatePassword">New Password:</label>
                            <input type="password" id="updatePassword" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>

                <!-- Audit Logs Section -->
                <div class="admin-section">
                    <h3>Audit Logs</h3>
                    <button id="viewLogsBtn" class="btn btn-primary">View Audit Logs</button>
                    <table id="auditLogsTable" style="display: none; width:100%; border-collapse: collapse; margin-top:20px;">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Admin Name</th>
                                <th>Admin Username</th>
                                <th>Record</th>
                                <th>Action Type</th>
                                <th>Changes</th>
                                <th>Timestamp</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

            </div>
        </main>
    </div>
</body>
</html>
