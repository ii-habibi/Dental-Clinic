<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DentalCare Admin Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/admin_routes.css">
    <script src="/js/jquery-3.6.0.min.js"></script>
    <script src="/js/adminDashboard.js"></script>
    <script src="/js/chart.js"></script>
</head>

<body>
    <div class="dashboard-container">
        <header class="main-header">
            <div class="header-content">
                <h1>Welcome, Dr. <%= name %>
                </h1>
                <div class="user-info">
                    <img src="https://via.placeholder.com/40" alt="User Avatar" class="user-avatar">
                    <span class="user-name">
                        <%= name %>
                    </span>
                </div>
            </div>
            <button id="sidebar-toggle" class="sidebar-toggle">
                <i class="fas fa-bars"></i>
            </button>
        </header>
        <aside class="sidebar">
            <div class="sidebar-header">
                <i class="fas fa-tooth"></i>
                <h2>DentalCare</h2>
            </div>
            <nav class="sidebar-nav">
                <a href="/dashboard" class="active"><i class="fas fa-home"></i> Dashboard</a>
                <a href="/dashboard/services"><i class="fas fa-concierge-bell"></i> Services</a>
                <a href="/dashboard/blogs"><i class="fas fa-blog"></i> Blogs</a>
                <a href="/dashboard/doctor"><i class="fas fa-user-md"></i> Doctors</a>
                <a href="/dashboard/appointments"><i class="fas fa-calendar-check"></i> Appointments</a>
                <a href="/dashboard/patients"><i class="fas fa-users"></i> Patients</a>
                <a href="/dashboard/expenses" class=""><i class="fas fa-money-check-dollar"></i>Expenses</a>
                <a href="/dashboard/finance" class=""><i class="fas fa-money-check-dollar"></i>Expenses</a>
                <a href="/dashboard/admin"><i class="fas fa-user-shield"></i> Admin</a>
            </nav>
            <div class="sidebar-footer">
                <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </div>
        </aside>
        <main class="main-content">
            <div class="dashboard-grid">
                <section class="dashboard-card stats-card">
                    <h2>Dashboard Stats</h2>
                    <div class="stats-grid">
                        <div class="stat-item">
                            <i class="fas fa-users"></i>
                            <span class="stat-value" id="total-patients">Loading...</span>
                            <span class="stat-label">Total Patients</span>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-user-clock"></i>
                            <span class="stat-value" id="returning-patients">Loading...</span>
                            <span class="stat-label">Returning Patients</span>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-calendar-alt"></i>
                            <span class="stat-value" id="patients-this-month">Loading...</span>
                            <span class="stat-label">Patients This Month</span>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-check-circle"></i>
                            <span class="stat-value" id="total-appointments">Loading...</span>
                            <span class="stat-label">Completed Appointments</span>
                        </div>
                    </div>
                </section>
                <section class="dashboard-card">
                    <h2>Pending Appointment Requests</h2>
                    <div class="table-responsive">
                        <table id="pending-appointments-table">
                            <thead>
                                <tr>
                                    <th>Patient Name</th>
                                    <th>Treatment Type</th>
                                    <th>Appointment Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Pending appointments will be populated here -->
                            </tbody>
                        </table>
                    </div>
                </section>
                <section class="dashboard-card">
                    <h2>Upcoming Appointments</h2>
                    <div class="table-responsive">
                        <table id="appointments-table">
                            <thead>
                                <tr>
                                    <th>Patient Name</th>
                                    <th>Appointment Date</th>
                                    <th>Treatment Type</th>
                                    <th>Doctor</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Upcoming appointments will be populated here -->
                            </tbody>
                        </table>
                    </div>
                </section>
                <section class="dashboard-card">
                    <h2>Completed Appointments by Month</h2>
                    <canvas id="appointments-bar-chart"></canvas>
                </section>
            </div>
        </main>
    </div>

    <footer>
        <div class="footer">
            <p class="footer-text">@copyrights 2024</p>
        </div>
    </footer>
</body>

</html>