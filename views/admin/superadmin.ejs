<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Super Admin Dashboard</title>
  <script src="/js/jquery-3.6.0.min.js"></script>
  <script src="/js/superAdmin.js"></script>
</head>
<body>

  <h1>Super Admin Dashboard</h1>

  <!-- Greeting Message -->
  <div >
    <h2>Hello, <%= name %>!</h2>
    <h3>Username: <%= username %></h3>
  </div>

  <!-- Admins List -->
  <div>
    <h2>All Admins</h2>
    <ul id="adminsList"></ul>
  </div>

  <!-- Add Admin Form -->
  <div>
    <h2>Add New Admin</h2>
    <form id="addAdminForm">
      <label>Name:</label>
      <input type="text" id="newAdminName" required>
      <label>Username:</label>
      <input type="text" id="newAdminUsername" required>
      <label>Password:</label>
      <input type="password" id="newAdminPassword" required>
      <label>Is Super Admin:</label>
      <select id="isSuperAdmin" required>
        <option value="false">No</option>
        <option value="true">Yes</option>
      </select>
      <button type="submit">Add Admin</button>
    </form>
  </div>

  <!-- Update Super Admin Credentials -->
  <div>
    <h2>Update Your Credentials</h2>
    <form id="updateSuperAdminForm">
      <label>Current Password:</label>
      <input type="password" id="currentPassword" required>
      <label>New Username:</label>
      <input type="text" id="updateUsername" required>
      <label>New Password:</label>
      <input type="password" id="updatePassword" required>
      <button type="submit">Update</button>
    </form>
  </div>

</body>
</html>
